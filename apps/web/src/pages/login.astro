---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/LoginForm";
import GuestRedirect from "../components/GuestRedirect";
---

<Layout title="登录 - UniPick">
  <GuestRedirect client:only="react" redirectTo="/">
    <div class="min-h-[80vh] flex flex-col justify-center items-center px-4">
      <div class="w-full max-w-md">
        <div class="text-center mb-8">
          <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900 dark:text-gray-100 tracking-tight">
            登录 <span class="text-orange-600">UniPick</span>
          </h2>
          <p class="text-gray-500 dark:text-gray-400">留学生专属二手交易平台</p>
        </div>

        <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-xl border border-gray-100 dark:border-gray-700">
          <LoginForm client:load />
        </div>

        <div class="mt-6 text-center">
          <p class="text-sm text-gray-500 dark:text-gray-400">
            还没有账号？
            <a href="/register" class="font-medium text-orange-600 hover:text-orange-500 hover:underline">
              立即注册
            </a>
          </p>
        </div>
      </div>
    </div>
  </GuestRedirect>
</Layout>
