---
import Layout from "../layouts/Layout.astro";
import LoginForm from "../components/LoginForm";
---

<Layout title="Login - UniPick">
    <div class="min-h-[80vh] flex flex-col justify-center items-center px-4">
        <div class="w-full max-w-md">
            <div class="text-center mb-8">
                <h2
                    class="mt-6 text-center text-3xl font-extrabold text-gray-900 tracking-tight"
                >
                    Signin <span class="text-orange-600">UniPick</span>
                </h2>
                <p class="text-gray-500">留学生专属二手交易平台</p>
            </div>

            <div
                class="bg-white p-8 rounded-2xl shadow-xl border border-gray-100"
            >
                <LoginForm client:only="react" />
            </div>

            <div class="mt-6 text-center">
                <p class="text-sm text-gray-500">
                    Don't have an account?
                    <a
                        href="/register"
                        class="font-medium text-orange-600 hover:text-orange-500 hover:underline"
                    >
                        Create one
                    </a>
                </p>
            </div>
        </div>
    </div>
</Layout>
